{% extends 'layout.njk' %}

{% block content %}
    <section class="description">
        <div class="description__container">
            <div class="description__container--wrapper">
                <div class="description__title">
                    <h1>As melhores receitas</h1>
                </div>

                <div class="description__text">
                    <p>aprenda a construir os melhores pratos<br>
                        com receitas criadas por profissionais<br>
                        do mundo inteiro.
                    </p>
                </div>
            </div>

            <div class="description__image">
                <img src="/img/chef.png" alt="chef-image">
            </div>
        </div>
    </section>

    <section class="mostAccessed">
        <div class="mostAccessed__title">
            <h2>Mais acessados</h2>
        </div>

        <div class="mostAccessed__container">
            <div class="mostAcessed__recipe">
                <div class="recipe__image">
                    <img src="/img/burger.png" alt="recipe-image">
                </div>

                <div class="recipe__title">
                    <p>Triplo bacon burger</p>
                </div>

                <div class="recipe__author">
                    <p>por Jorge Relato</p>
                </div>
            </div>

            <div class="mostAcessed__recipe">
                <div class="recipe__image">
                    <img src="/img/pizza.png" alt="recipe-image">
                </div>

                <div class="recipe__title">
                    <p>Pizza 4 estações</p>
                </div>

                <div class="recipe__author">
                    <p>por Fabiana Melo</p>
                </div>
            </div>

            <div class="mostAcessed__recipe">
                <div class="recipe__image">
                    <img src="/img/espaguete.png" alt="recipe-image">
                </div>

                <div class="recipe__title">
                    <p>Espaguete ao alho</p>
                </div>

                <div class="recipe__author">
                    <p>por Júlia Kinoto</p>
                </div>
            </div>

            <div class="mostAcessed__recipe">
                <div class="recipe__image">
                    <img src="/img/lasanha.png" alt="recipe-image">
                </div>

                <div class="recipe__title">
                    <p>Lasanha mac n' cheese</p>
                </div>

                <div class="recipe__author">
                    <p>por Juliano Vieira</p>
                </div>
            </div>

            <div class="mostAcessed__recipe">
                <div class="recipe__image">
                    <img src="/img/doce.png" alt="recipe-image">
                </div>

                <div class="recipe__title">
                    <p>Docinhos pão-do-céu</p>
                </div>

                <div class="recipe__author">
                    <p>por Ricardo Golvea</p>
                </div>
            </div>

            <div class="mostAcessed__recipe">
                <div class="recipe__image">
                    <img src="/img/asinhas.png" alt="recipe-image">
                </div>

                <div class="recipe__title">
                    <p>Asinhas de frango ao barbecue</p>
                </div>

                <div class="recipe__author">
                    <p>por Vania Steroski</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}